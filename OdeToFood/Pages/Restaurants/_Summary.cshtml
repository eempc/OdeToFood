@using OdeToFood.Core
@model Restaurant

<!-- This is a partial view, it will replace each of the foreach restaurant table cell in the List.cshtml -->
<!-- It is still very unusual what parameter gets passed in and where. I know it is a restaurant from the model declaration at the top -->
<!-- Note that it is not a razor page, it is just a snippet of HTML/ASP code -->

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <br />
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-outline-dark" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="fa fa-search-plus"></i>
        </a>
        <a class="btn btn-outline-dark" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="fa fa-edit"></i>
        </a>
        <a class="btn btn-outline-dark" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>